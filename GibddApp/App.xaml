<Application x:Class="GibddApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GibddApp"
             StartupUri="WIndows/Auth.xaml">
    <Application.Resources>
        <Style x:Key="FontStyle">
            <Setter Property="TextBlock.FontFamily" Value="Century Gothic"/>
        </Style>
        <Style TargetType="TextBlock" BasedOn="{StaticResource FontStyle}">
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource FontStyle}">
            <Setter Property="Background" Value="#FFE0A9AF"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
